.project-repositories
  font-size inherit

.project-repositories .empty-repository
  height calc(100vh - 180px)

.project-repositories .label-name
  flex-shrink 0
  word-wrap break-word

.project-repositories .label-name span
  margin-right 5px
  font-weight bold

.project-repositories .repository-mobile,
.project-repositories .repository-desktop
  margin-bottom 25px
  position relative

.project-repositories .repository-mobile,
.project-repositories .repository-mobile .copy-clipboard
  display block
  margin-left 0

.project-repositories .url-label
  flex-shrink 0
  min-height 16px
  margin-left 2px
  margin-right 0
  margin-bottom 0
  padding-bottom 0
  display inline-block
  word-wrap break-word
  width calc(100% - 40px)
  border-width 1.4px
  border-bottom-style solid
  border-color $default-border-color

.project-repositories .url-label span
  text-align justify
  margin-right -5px
  padding-bottom 2px

.project-repositories .prompt
  width 20%
  margin-top -2%
  padding-right 5px
  color $disabled-color
  margin-bottom 10px

.project-repositories .prompt span
  font-weight bold

.project-repositories .copy-clipboard
  right 0
  font-size 18px
  position absolute
  color $disabled-color

.project-repositories .repository-mobile .copy-clipboard
  bottom calc(50% - 20px)

.project-repositories .repository-desktop .copy-clipboard
  bottom calc(50% - 10px)

